# LLM Retrieval Accuracy Benchmarks - Environment Configuration
# Copy this to .env and fill in your Azure AI Foundry credentials

# ============================================================================
# REQUIRED: Azure AI Foundry Credentials
# ============================================================================
# Get these from https://ai.azure.com/
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-01

# ============================================================================
# REQUIRED: Model Deployment Names
# ============================================================================
# These are the exact deployment names from your Azure AI Studio
AZURE_GPT5_DEPLOYMENT=gpt-5-nano
AZURE_GROK_DEPLOYMENT=grok-4-fast-reasoning
AZURE_LLAMA_DEPLOYMENT=Llama-4-Maverick-17B-128E-Instruct-FP8

# ============================================================================
# OPTIONAL: Configuration
# ============================================================================
# Cache directory for API responses (saves money on reruns)
CACHE_DIR=./benchmarks/.cache

# Dry run mode - estimate costs without actual API calls
DRY_RUN=false
